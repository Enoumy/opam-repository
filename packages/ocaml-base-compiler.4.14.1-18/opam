opam-version: "2.0"
version: "4.14.1"
synopsis: "Official release 4.14.1"
maintainer: "platform@lists.ocaml.org"
authors: "Xavier Leroy and many contributors"
license: "LGPL-2.1-or-later WITH OCaml-LGPL-linking-exception"
homepage: "https://ocaml.org"
bug-reports: "https://github.com/ocaml/opam-repository/issues"
depends: [
  "ocaml" {= "4.14.1" & post}
  "base-unix" {post}
  "base-bigarray" {post}
  "base-threads" {post}
  "ocaml-options-vanilla" {post}
]
conflict-class: "ocaml-core-compiler"
flags: compiler
setenv: CAML_LD_LIBRARY_PATH = "%{lib}%/stublibs"
build: [
  [
    "./configure-legacy-install.sh"
    "--prefix=%{prefix}%"
    "--docdir=%{doc}%/ocaml"
    "-C"
    "CC=cc" {os = "openbsd" | os = "macos"}
    "ASPP=cc -c" {os = "openbsd" | os = "macos"}
  ]
  [make "-C" "ocaml" "-j%{jobs}%"]
]
install: [make "-C" "ocaml" "install"]
post-messages: [
  """\
A failure in the middle of the build may be caused by build parallelism
   (enabled by default).
   Please file a bug report at https://github.com/ocaml/opam-repository/issues"""
    {failure & jobs > "1"}
  """\
You can try installing again including --jobs=1
   to force a sequential build instead."""
    {failure & jobs > "1" & opam-version >= "2.0.5"}
]
dev-repo: "git+https://github.com/ocaml/ocaml"
extra-files: [
  "ocaml-base-compiler.install" "md5=3e969b841df1f51ca448e6e6295cb451"
]
url {
  src: "https://github.com/ocaml-flambda/flambda-backend/archive/refs/tags/4.14.1-18-opam.tar.gz"
  checksum:
    "sha256=9a44b0776d62febb562f488b49e7bf3eb034c9b48d05081eeb8be84ec223c5b1"
}
extra-files: [
  "ocaml-base-compiler.install" "sha256=79f2a1a5044a91350a0eb6ce12e261a72a2855c094c425cddf3860e58c486678"
]
