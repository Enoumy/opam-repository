opam-version: "2.0"
maintainer:   "dev@ocsigen.org"
authors:      "Ocsigen team"
bug-reports:  "https://github.com/ocsigen/js_of_ocaml/issues"
homepage:     "http://ocsigen.github.io/js_of_ocaml"
dev-repo:     "git+https://github.com/ocsigen/js_of_ocaml.git"
synopsis:     "Compiler from OCaml bytecode to Javascript"
description: """
Js_of_ocaml is a compiler from OCaml bytecode to JavaScript.
It makes it possible to run pure OCaml programs in JavaScript
environment like browsers and Node.js
"""

build: [["dune" "build" "-p" name "-j" jobs]]

depends: [
  "ocaml" {>= "4.02.0" & < "4.12.0"}
  "dune" {>= "2.5"}
  "ppx_expect" {with-test & >= "v0.12.0"}
  "cmdliner"
  "menhir"
  "ppxlib" {>= "0.15.0"}
  "yojson" # It's optional, but we want users to be able to use source-map without pain.
]

depopts: [ "ocamlfind" ]

conflicts: [
  "ocamlfind"   {< "1.5.1"}
  "js_of_ocaml" {< "3.0"}
]
url {
  src:
       "https://github.com/ocsigen/js_of_ocaml/archive/7ce9e9821ccb67fbaf7c170646c64758a641f652.tar.gz"
  checksum: [
    "sha256=96563f159707bd3d24b2778bb384bba81c783066060d3638b86b5340af6df39b"
  ]
}
